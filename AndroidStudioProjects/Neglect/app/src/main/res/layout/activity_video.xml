<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout tools:context=".MainActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvOpenURL"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:text="OPEN URL"/>

            <EditText
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/etVieoURL"
                android:layout_weight="1"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/ptnLoad"
                android:text="Load"
                android:onClick="loadVideo"
                style="?android:attr/buttonStyleSmall"/>
        </LinearLayout>

        <VideoView
            android:layout_height="400dp"
            android:layout_width="match_parent"
            android:id="@+id/videoView"
            android:layout_gravity="center_horizontal"/>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <SeekBar
                android:layout_height="wrap_content"
                android:layout_width="306dp"
                android:id="@+id/seekBar"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvTotalTime"
                android:text="03:20"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btnPlay"
                android:text=">"
                android:onClick="playVideo" style="?android:attr/buttonStyleSmall"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btnPause"
                android:text="||"
                android:onClick="pauseVideo" style="?android:attr/buttonStyleSmall"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>