<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jhj0104.neglect">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".NeglectCover"
            android:screenOrientation = "landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Notice"
            android:screenOrientation = "landscape">
        </activity>

        <activity
            android:name=".LineBisection"
            android:screenOrientation = "landscape">
        </activity>
        <activity
        android:name=".LineBisectionResult"
        android:screenOrientation = "landscape">
        </activity>

        <activity android:name=".MainActivity"
            android:screenOrientation = "landscape">
        </activity>
        <activity android:name=".NeglectVideo"
            android:screenOrientation = "landscape">
        </activity>
        <activity android:name=".csvReader"
            android:screenOrientation = "landscape">
        </activity>
        <activity android:name=".CLineBisection"
                  android:screenOrientation = "landscape">
        </activity>

        <service
            android:name="com.example.jhj0104.neglect.service.ScreenRecorderService"
            android:enabled="true"
            android:exported="false" >
        </service>

    </application>
</manifest>